{
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "target": "ES2020",
    "allowJs": false,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "build",
    "rootDir": "./src",
    "removeComments": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "types": ["node", "express", "jest"]
  },
  "include": [
    "src/**/*",
    "src/types/**/*",
    "src/**/*.d.ts",
    "src/types/*.d.ts",
    "tests/**/*"
  ],
  "exclude": ["build", "node_modules", ".templates"]
}
